package quiz22;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.InputStreamReader;
import java.io.UnsupportedEncodingException;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.regex.Matcher;
import java.util.regex.Pattern;


public class ReGexQuiz03 {

	public static void main(String[] args) {

		/*
		 * 1. 버퍼리더를 사용해서 건담.txt를 읽어들인다.(readLin으로 한 줄씩 읽어들임)
		 * 2. 정규표현식을 이용해서 날짜, 지점, 등급, 내용, 가격 을 정규표현식으로 패턴분석
		 * 	  Product 객체에 저장하고, 리스트에 저장
		 * 
		 * 3. 외부라이브러리 (POI) - 자바에서 엑셀파일 xlsx 형태로 파일을 쓸 수 있도록하는 기능
		 * 	  하나에 시트에 각 행데이터를 엑셀 파일로 출력.
		 * 
		 * 	private String day;
	private String store;
	private String grade;
	private String detail;
	private String price;
		 */



		String path = "C:\\Users\\user\\Documents\\카카오톡 받은 파일\\건담.txt";
		String str;
		String pattern1 = "[0-9]+-[0-9]+-[0-9]+";
		String pattern2 = "[건담(베이스)]+\\s[가-힝]+";
		String pattern3 = "\\[[A-Z가-힝]+\\]";
		//		String pattern4 = "^(?:\\S+\\s){3}(.+?)\\s\\S+$";
		String pattern5 = "[0-9]+원";

		try (BufferedReader br = new BufferedReader(new InputStreamReader(new FileInputStream(path)))){
			
			Object product;
			while((str = br.readLine()) != null) {
				String[] tokens = str.split("\\s");
				String[] arr = str.split("\n");


				List<String> list = Arrays.asList(arr);
				
				StringBuilder resultBuilder = new StringBuilder();
				for (int i = 4; i < tokens.length - 1; i++) {
					resultBuilder.append(tokens[i]).append(" ");
				}
				String result = resultBuilder.toString().trim();
					

				for (int i = 0; i < list.size(); i++) {

					String str2 = list.get(i);	

					Matcher x1 = Pattern.compile(pattern1).matcher(str2);//1번째 패턴
					Matcher x2 = Pattern.compile(pattern2).matcher(str2);//2번째 패턴
					Matcher x3 = Pattern.compile(pattern3).matcher(str2);//3번째 패턴
					//			Matcher x4 = Pattern.compile(pattern4).matcher(str2);//4번째 패턴
					Matcher x5 = Pattern.compile(pattern5).matcher(str2);//5번째 패턴
					
					if(x1.find() &&x2.find() &&x3.find() &&x5.find()) {
//						System.out.println("---------------");
//						System.out.println(x1.group());
//						System.out.println(x2.group());
//						System.out.println(x3.group());
//						//				System.out.println(x4.group());
//						System.out.println(x5.group());
//						System.out.println(result);
						
						product = new Product(x1.group(),x2.group(), x3.group(),result, x5.group());
						list.add(product);
						
					}
				}

			}


		} catch (Exception e) {
			e.printStackTrace();
		}



	}

}
