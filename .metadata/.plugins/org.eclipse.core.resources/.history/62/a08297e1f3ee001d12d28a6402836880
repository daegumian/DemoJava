package day14.api.thread.ex02;

public class ThreadTest implements Runnable {

	private int num = 0;

	@Override
	public void run() {
		
		for (int i = 1; i <= 10; i++) {
			
			num++;
			
			System.out.println("============================================");
			System.out.println("쓰레드명 : " + Thread.currentThread().getName()); //현재의 쓰레드 값 반환
			System.out.println(num);
			System.out.println("============================================");
			try {
				Thread.sleep(1000);
			} catch (Exception e) {
			}
			
			
		}
		
		
	}
	
}

